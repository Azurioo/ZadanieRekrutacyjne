<Window x:Class="ImageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Border Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button FontSize="20" Margin="5 0 5 0" Grid.Column="0" Click="LoadButton_OnClick" Content="Load"/>
                <Button FontSize="20" Margin="5 0 5 0" Grid.Column="1" Click="Async_OnClick" Content="Async"/>
                <Button FontSize="20" Margin="5 0 5 0" Grid.Column="2" Click="Sync_OnClick" Content="Sync"/>
            </Grid>
            <ProgressBar Grid.Row="0" Height="30" Margin="10" Name="ProgressBar" Visibility="Hidden"/>
            <Image Margin="5 10 5 10" Grid.Row="0" Name="Image" ></Image>
        </Grid>
    </Border>
</Window>
